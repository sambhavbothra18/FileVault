<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">Upload New File</h2>
      </div>
      <div class="card-body">
        <%= form_with model: @uploaded_file, local: true, multipart: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @uploaded_file.errors.any? %>
            <div class="alert alert-danger">
              <h5>Please fix the following errors:</h5>
              <ul class="mb-0">
                <% @uploaded_file.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "Enter a title for your file", required: true %>
            <div class="invalid-feedback">
              Please provide a title for your file.
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Optional description" %>
          </div>

          <div class="mb-4">
            <%= form.label :vault_file, "Select File", class: "form-label" %>
            <%= form.file_field :vault_file, class: "form-control", required: true, accept: "*/*" %>
            <div class="form-text">
              Maximum file size: 1GB. All file types are supported.
            </div>
            <div class="invalid-feedback">
              Please select a file to upload.
            </div>
          </div>

          <div class="progress mb-3" style="display: none;" id="uploadProgress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to "Cancel", uploaded_files_path, class: "btn btn-secondary" %>
            <%= form.submit "Upload File", class: "btn btn-primary", id: "uploadBtn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        } else {
          // Show progress bar and disable button
          document.getElementById('uploadProgress').style.display = 'block';
          document.getElementById('uploadBtn').disabled = true;
          document.getElementById('uploadBtn').innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Uploading...';
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();

// File size validation
document.querySelector('input[type="file"]').addEventListener('change', function(e) {
  const file = e.target.files[0];
  if (file && file.size > 1073741824) { // 1GB in bytes
    alert('File size exceeds 1GB limit. Please choose a smaller file.');
    e.target.value = '';
  }
});
</script>