<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">Edit File Details</h2>
      </div>
      <div class="card-body">
        <%= form_with model: @uploaded_file, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if @uploaded_file.errors.any? %>
            <div class="alert alert-danger">
              <h5>Please fix the following errors:</h5>
              <ul class="mb-0">
                <% @uploaded_file.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", required: true %>
            <div class="invalid-feedback">
              Please provide a title for your file.
            </div>
          </div>

          <div class="mb-4">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Optional description" %>
          </div>

          <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Note:</strong> You can only edit the title and description. To change the file itself, you'll need to upload a new file.
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to "Cancel", @uploaded_file, class: "btn btn-secondary" %>
            <%= form.submit "Update File Details", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>